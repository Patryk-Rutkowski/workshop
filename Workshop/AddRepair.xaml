        <Button x:Name="add_Copy" Content=">>" HorizontalAlignment="Left" Margin="233,79,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.267,0.046" Click="add_Click"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="313,10,0,0" VerticalAlignment="Top" Height="214" Width="231"/>
    </Grid>
</Window>
